@model EmployeeDetailViewModel

<div class="col-md-12 grid-margin grid-margin-md-0">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Employee List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Employee Details</li>
                </ol>
            </nav><br /><br />
            <div class="wrap d-flex justify-content-start justify-content-sm-center flex-wrap">
                <img class="rounded-circle shadow-lg" style="width:300px; height:350px" src="@Url.Content(Model.ImageUrl)" alt=""/>
                <div class="wrap align-items-center ml-5">
                    <p class="font-weight-bold text-success" style="font-size:20px">@Model.FullName</p>
                    <p class="font-weight-normal">Role: @Model.Designation</p>
                    <p class="font-weight-normal">Gender: @Model.Gender</p>
                    <p class="font-weight-normal">Date of Birth: @Model.DOB.ToString("dd-MM-yyyy")</p>
                    <p class="font-weight-normal">Employee Number: @Model.EmployeeNo</p>
                    <p class="font-weight-normal">National Insurance Number: @Model.NationalInsuranceNo</p>
                    <p class="font-weight-normal">Email: <a href="#">@Model.Email</a></p>
                    <p class="font-weight-normal">PhoneNumber: <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a></p>
                    <br /> <br />
                    <p class="font-weight-bold"> Pay & Deductions</p>
                    <hr style="background-color:lightcoral" />
                    <p class="font-weight-normal">Payment Method: @Model.Paymentmethod</p>
                    <p class="font-weight-normal">Student Loan: @Model.StudentLoan</p>
                    <p class="font-weight-normal">Union Member: @Model.Unionmember</p>
                    <p class="font-weight-normal"><i class="far fa-envelope" style="margin-right:.3em"></i><a href="mailto:@Model.Email?subject=Payslip&body=Attached within is your payslip">Send Payslip</a></p>
                    <br /><br />
                    <p class="font-weight-bold"> Address</p>
                    <hr style="background-color:darkcyan" />
                    <p class="font-weight-normal"> @Model.Address</p>
                    <p class="font-weight-normal"> @Model.City</p>
                    <p class="font-weight-normal"> @Model.Postcode</p>
                </div>
            </div>
        </div>
    </div>
</div>